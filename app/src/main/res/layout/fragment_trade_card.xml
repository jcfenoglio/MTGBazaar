<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/trade_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="cardname"
        android:textSize="11dp"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/trade_X"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin"
        android:text="X"
        android:layout_toRightOf="@id/trade_card_name"
        android:textSize="11dp"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/trade_card_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="0"
        android:layout_toRightOf="@id/trade_X"
        android:textSize="11dp"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/trade_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="$0.00"
        android:layout_toRightOf="@id/trade_card_amount"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:textSize="11dp"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/trade_set_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:text="setname"
        android:layout_below="@id/trade_X"
        android:textSize="10dp"
        android:textAppearance="?attr/textAppearanceListItem" />
</RelativeLayout>
